<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/upArrowIv"
                    android:layout_width="21dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/upempty" />

                <TextView
                    android:id="@+id/counterTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/downArrowIv"
                    android:layout_width="21dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/downempty" />

            </LinearLayout>

            <!-- THIS IS A SPACER DON'T REMOVE -->

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <!-- DONT REMOVE SPACER OR BUTTON WON'T ALIGN -->
            
            <Button
                android:id="@+id/profileBuyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy Now!"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dp"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>